                            <i class="icon-check-empty icon-stack-base icon-large"></i>
                            <i class="icon-github icon-large"></i>
                        </span>
                    </a>
                </li>
            </ul>
        </div>
    </footer>

    @Scripts.Render("~/bundles/js")    
    @RenderSection("scripts", required: false)
</body>
</html>
